<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15" />
    </padding>

    <Label fx:id="titleLabel" text="Location Management" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <ListView fx:id="locationListView" VBox.vgrow="ALWAYS" />

    <HBox spacing="10">
        <Button fx:id="detailsButton" text="Details" />
        <Button fx:id="popupButton" text="Pop Up" />
        <Button fx:id="productButton" text="Go to Product" />
        <Button fx:id="boneButton" text="Go to Bone" />
    </HBox>
</VBox>