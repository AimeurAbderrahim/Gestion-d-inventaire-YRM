<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" stylesheets="@../../Styles/PopUpStyles.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stateMachin.BonPopUpController">
    <children>
        <VBox spacing="20" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="20.0">
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="header-box">
                <Label text="Ajouter un Bon de Reception" styleClass="title-label" HBox.hgrow="ALWAYS" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="closeButton" onAction="#onCancel" styleClass="close-button">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20">
                            <Image url="@../../images/close.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>

            <Separator />

            <VBox spacing="10" styleClass="content-box">
                <VBox styleClass="form-field">
                    <Label text="Date" styleClass="field-label" />
                    <DatePicker fx:id="dateField" prefWidth="Infinity" promptText="Sélectionnez la date" />
                </VBox>

                <VBox styleClass="form-field">
                    <Label text="Fournisseur" styleClass="field-label" />
                    <ComboBox fx:id="emplacementCombo" prefWidth="Infinity" promptText="Sélectionnez le fournisseur" />
                </VBox>

                <VBox styleClass="form-field">
                    <Label text="Type de Produit" styleClass="field-label" />
                    <ComboBox fx:id="produitTypeCombo" prefWidth="Infinity" promptText="Sélectionnez le type de produit" />
                </VBox>

                <VBox styleClass="form-field">
                    <Label text="Quantité" styleClass="field-label" />
                    <TextField fx:id="quantite" promptText="Entrez la quantité" />
                </VBox>

                <HBox styleClass="button-box">
                    <Button onAction="#onCancel" text="Annuler" styleClass="cancel-button" />
                    <Button onAction="#Confirm" text="Confirmer" defaultButton="true" />
                </HBox>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
