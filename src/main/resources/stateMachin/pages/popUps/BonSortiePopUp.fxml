<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" stylesheets="@AddEmplacementPopUp.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.14-internal" fx:controller="stateMachin.BonPopUpController">
    <children>
        <VBox alignment="CENTER" spacing="15" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <Label text="Ajouter / Modifier un Bon de Sortie">
                <font><Font name="System Bold" size="20.0" /></font>
            </Label>

            <TextField fx:id="idBonField" promptText="ID Bon" styleClass="Text-Field" />
            <DatePicker fx:id="dateField" promptText="Date" />
            <ComboBox fx:id="emplacementCombo" promptText="Emplacement" />

            <HBox alignment="CENTER" spacing="10">
                <Button onAction="#onCancel" text="Annuler" />
                <Button onAction="#onValidate" text="Valider" />
                <Button onAction="#onDelete" text="Supprimer" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
