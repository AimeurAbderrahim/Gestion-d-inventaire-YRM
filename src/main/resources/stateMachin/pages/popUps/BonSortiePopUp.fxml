<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" stylesheets="@../../Styles/PopUpStyles.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stateMachin.BonSortiePopUpController">
    <children>
        <VBox spacing="20" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="20.0">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Ajouter un Bon de Sortie" styleClass="title-label" HBox.hgrow="ALWAYS" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="closeButton" onAction="#onCancel" styleClass="close-button">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20">
                            <Image url="@../../images/close.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>

            <Separator />

            <VBox spacing="10">
                <Label text="Date" styleClass="field-label" />
                <DatePicker fx:id="dateField" prefWidth="Infinity" promptText="Sélectionnez la date" />
            </VBox>

            <VBox spacing="10">
                <Label text="Emplacement" styleClass="field-label" />
                <ComboBox fx:id="emplacementCombo" prefWidth="Infinity" promptText="Sélectionnez l'emplacement" />
            </VBox>

            <VBox spacing="10">
                <Label text="Type de Produit" styleClass="field-label" />
                <ComboBox fx:id="produitTypeCombo" prefWidth="Infinity" promptText="Sélectionnez le type de produit" />
            </VBox>

            <VBox spacing="10">
                <Label text="Quantité" styleClass="field-label" />
                <TextField fx:id="quantite" promptText="Entrez la quantité" />
            </VBox>

            <Region VBox.vgrow="ALWAYS" />

            <HBox alignment="CENTER" spacing="20">
                <Button onAction="#onCancel" text="Annuler" styleClass="cancel-button" />
                <Button onAction="#Confirm" text="Confirmer" defaultButton="true" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
